#!/bin/bash

## Description: Install all TYPO3 versions (v12 and v13) with temporal_cache extension
## Usage: install-all
## Example: ddev install-all

set -e

echo "Installing all TYPO3 versions..."
echo ""

# Install v12
echo "=========================================="
echo "Installing TYPO3 v12.4 LTS..."
echo "=========================================="
/var/www/html/.ddev/commands/web/install-v12

echo ""
echo ""

# Install v13
echo "=========================================="
echo "Installing TYPO3 v13.0 LTS..."
echo "=========================================="
/var/www/html/.ddev/commands/web/install-v13

echo ""
echo "=========================================="
echo "All installations complete!"
echo "=========================================="
echo ""
echo "Available environments:"
echo "  - TYPO3 v12: https://v12.temporal-cache.ddev.site/"
echo "  - TYPO3 v13: https://v13.temporal-cache.ddev.site/"
echo ""
echo "Backend access:"
echo "  Username: admin"
echo "  Password: Password:joh316"
echo ""
